<div class="serviceprovidersgrid row-gap-3">
  <% allServiceProviders.forEach(provider => { %>
  <div class="card" style="width: 18rem">
    <img src="<%=provider.photo%>" class="card-img-top" alt="..." />
    <div class="card-img-overlay" style="height: 20px">
      <script>
        serviceproviderCheckVerified("<%= provider.isverified %>");
      </script>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= provider.globalname %></h5>
      <p class="card-text">
        <script>
          serviceproviderShortText("<%= provider.description %>");
        </script>
      </p>
      <a href="/serviceproviderfull/<%= provider._id %>" class="btn btn-primary"
        >WiÄ™cej...</a
      >
    </div>
  </div>
  <% }); %>
</div>
